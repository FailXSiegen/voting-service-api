# Database
DATABASE_HOST=""
DATABASE_PORT="3306"
DATABASE_USER=""
DATABASE_PASSWORD=""
DATABASE_NAME=""
# Debug
DEBUG="0"
LOG_QUERIES_TO_CONSOLE="0"
ENABLE_DEBUG="0"
# Application
APP_PORT="80"
PASSWORD_SALT_ROUNDS=10
NODE_ENV="production"
# JWT
ENABLE_JWT="1"
JWT_SECRET="my-secret"
JWT_ISSUER="www.example.com"
